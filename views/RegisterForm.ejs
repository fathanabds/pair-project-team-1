<!DOCTYPE html>
<html class="bg-gray-50" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Register User</title>
  </head>
  <body class="">
    <div class="flex flex-col justify-center px-6">
      <div class="mx-auto w-full mt-10 max-w-[480px]">
        <div class="mx-auto w-full max-w-md">
          <img class="mx-auto h-32 w-auto" src="/images/Ola_Doc.png" alt="" />
          <h1 class="text-center my-5 text-2xl font-bold">Register New User</h1>
        </div>
        <% if (error) { %>
        <p class="mb-3 text-red-500"><%= error %></p>
        <% } %>
        <div class="bg-white px-6 py-12 shadow rounded-lg">
          <form class="space-y-6" method="post">
            <div class="space-y-2">
              <label class="block text-sm font-medium" for="name">Full Name</label>
              <input class="block w-full rounded-md py-1.5 px-3 shadow-sm placeholder:text-gray-400 text-sm ring-1 ring-inset ring-gray-300" type="text" id="name" name="name" />
            </div>
            <div class="space-y-2">
              <label class="block text-sm font-medium" for="email">Email</label>
              <input class="block w-full rounded-md py-1.5 px-3 shadow-sm placeholder:text-gray-400 text-sm ring-1 ring-inset ring-gray-300" type="text" id="email" name="email" />
            </div>
            <div class="space-y-2">
              <label class="block text-sm font-medium" for="password">Password</label>
              <input class="block w-full rounded-md py-1.5 px-3 shadow-sm placeholder:text-gray-400 text-sm ring-1 ring-inset ring-gray-300" type="password" id="password" name="password" />
            </div>
            <div class="space-y-2">
              <label class="block text-sm font-medium" for="role">Role</label>
              <select class="block w-full rounded-md py-1.5 px-3 shadow-sm placeholder:text-gray-400 text-sm ring-1 ring-inset ring-gray-300" name="role" id="role">
                <option value="">--- Select One ---</option>
                <% roles.forEach(el => { %>
                <option value="<%= el %>"><%= el %></option>
                <% }) %>
              </select>
            </div>
            <div class="space-y-2">
              <label class="block text-sm font-medium" for="dateOfBirth">Date of Birth</label>
              <input class="block w-full rounded-md py-1.5 px-3 shadow-sm placeholder:text-gray-400 text-sm ring-1 ring-inset ring-gray-300" type="date" id="dateOfBirth" name="dateOfBirth" />
            </div>
            <button class="flex w-full justify-center rounded-md px-3 py-1.5 font-semibold bg-blue-500 text-white hover:bg-blue-600" type="submit">Register</button>
          </form>
        </div>
        <div class="mt-5 mb-5">
          <p class="text-center text-sm text-gray-500">
            Have an account?
            <a class="font-semibold text-blue-600 hover:text-blue-500" href="/user/login">Login</a>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
